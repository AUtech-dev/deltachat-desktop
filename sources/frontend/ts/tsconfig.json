{
    "compilerOptions": {
        "outDir": "../../../dist/frontend/js/app",
        "rootDir": ".",

        // Compile to be compatible with ESM/snowpack compatible 
        "module": "commonjs",
        "target": "es2015",

        // Enable JSX/Preact support
        "jsx": "react",
        "baseUrl": ".",

        // Enable source maps for debugging  
        "sourceMap": true,
        "sourceRoot": "../../../dist/frontend/js/app",
        "inlineSources": true,
    
        // Incremental builds
        "composite": true,
        "incremental": true,
        "tsBuildInfoFile": "../../../dist/frontend/js/app/.tsbuildinfo",

        "allowJs": true,
        "noImplicitAny": true,
        "esModuleInterop": true
    },
    "references": [
        {
            "path": "../../shared/tsconfig.frontend.json"
        }
    ]
}
